<?xml version="1.0" encoding="UTF-8"?>
<project name="laravel-xslt-view" default="dist">

    <target name="test">
        <phpunit haltonfailure="true" printsummary="true">
            <batchtest>
                <fileset dir="test">
                    <include name="**/*Test.php"/>
                </fileset>
            </batchtest>
        </phpunit>
        <phpcodesniffer haltonerror="true" standard="vendor/bbc-fm-nk-core-eng/codesniffer-rules/BBC/ruleset.xml" file="src" allowedFileExtensions="php"/>
    </target>

    <target name="dist" depends="test" />
</project>
